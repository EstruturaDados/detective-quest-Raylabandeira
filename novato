#include <stdio.h>
#include <stdlib.h>

// Estrutura da sala (n칩 da 치rvore)
typedef struct Sala {
    char nome[30];
    struct Sala *esquerda;
    struct Sala *direita;
} Sala;

// Cria uma nova sala
Sala* criarSala(const char *nome, Sala *esq, Sala *dir) {
    Sala *nova = (Sala*)malloc(sizeof(Sala));
    if (nova != NULL) {
        strcpy(nova->nome, nome);
        nova->esquerda = esq;
        nova->direita = dir;
    }
    return nova;
}

// Explora칞칚o interativa da mans칚o
void explorarSalas(Sala *atual) {
    char escolha;
    while (atual != NULL) {
        printf("\n游늸 Voc칡 est치 na sala: %s\n", atual->nome);
        if (atual->esquerda == NULL && atual->direita == NULL) {
            printf("游댌 Fim do caminho. Sala sem sa칤da.\n");
            break;
        }

        printf("Escolha o caminho:\n");
        if (atual->esquerda != NULL) printf("e - Ir para a esquerda\n");
        if (atual->direita != NULL) printf("d - Ir para a direita\n");
        printf("s - Sair da explora칞칚o\n");
        printf("Opcao: ");
        scanf(" %c", &escolha);

        if (escolha == 'e' && atual->esquerda != NULL) {
            atual = atual->esquerda;
        } else if (escolha == 'd' && atual->direita != NULL) {
            atual = atual->direita;
        } else if (escolha == 's') {
            printf("游녦 Saindo da mans칚o...\n");
            break;
        } else {
            printf("丘멆잺 Caminho inv치lido. Tente novamente.\n");
        }
    }
}

int main() {
    // Constru칞칚o est치tica da 치rvore de c칪modos
    Sala *cozinha = criarSala("Cozinha", NULL, NULL);
    Sala *biblioteca = criarSala("Biblioteca", NULL, NULL);
    Sala *jardim = criarSala("Jardim", NULL, NULL);
    Sala *escritorio = criarSala("Escrit칩rio", NULL, NULL);

    Sala *salaEstar = criarSala("Sala de Estar", cozinha, biblioteca);
    Sala *salaJantar = criarSala("Sala de Jantar", jardim, escritorio);

    Sala *hallEntrada = criarSala("Hall de Entrada", salaEstar, salaJantar);

    // In칤cio da explora칞칚o
    explorarSalas(hallEntrada);

    // Libera칞칚o de mem칩ria
    free(cozinha);
    free(biblioteca);
    free(jardim);
    free(escritorio);
    free(salaEstar);
    free(salaJantar);
    free(hallEntrada);

    return 0;
}
